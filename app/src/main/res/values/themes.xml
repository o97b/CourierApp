<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CourierApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FD5D54</item>
        <item name="colorPrimaryVariant">#40C256</item>
        <item name="colorOnPrimary">#F9F9F9</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <item name="android:windowTranslucentNavigation">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Text styles -->
    <style name="MediumText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BigTextType">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Buttons styles -->
    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="BigButton"
        parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>


    <!-- Card styles -->
    <style name="BaseCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>


</resources>